                                     FontFamily="{StaticResource FontIcons}"
                                     Size="30" />
                </sv:PickerCell.IconSource>
            </sv:PickerCell>
            <sv:CheckboxCell Title="{xct:Translate AppSetingApplicationNotificationLabel}" 
