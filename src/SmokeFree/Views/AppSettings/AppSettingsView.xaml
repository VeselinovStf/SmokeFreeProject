                  >
                <sv:CommandCell.IconSource>
                    <FontImageSource
                                     Glyph="&#xe70C;"
                                     Color="Black"
                                     FontFamily="{StaticResource FontIcons}"
                                     Size="30" />
                </sv:CommandCell.IconSource>
            </sv:CommandCell>
            <sv:PickerCell 
                x:Name="ColorPicker"
                SelectionMode="Single"
                Title="{xct:Translate AppSetingApplicationColorLabel}"                          
