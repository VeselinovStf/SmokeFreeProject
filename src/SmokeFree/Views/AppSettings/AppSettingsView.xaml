                                     FontFamily="{StaticResource FontIcons}"
                                     Size="30" />
                </sv:PickerCell.IconSource>
            </sv:PickerCell>
            <sv:CommandCell  Title="{xct:Translate AppSetingApplicationFeedbackLabel}" Height="80"
